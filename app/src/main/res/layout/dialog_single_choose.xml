<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_dialog_single_choose_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="填写内容"
        android:layout_marginTop="@dimen/twenty_four"
        android:layout_marginLeft="@dimen/twenty_four"
        android:layout_marginRight="@dimen/twenty_four"
        android:textStyle="bold"
        android:textColor="@color/md_black"
        android:textSize="@dimen/sixteen"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_dialog_single_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty"
        android:layout_marginLeft="@dimen/twenty_four"
        android:layout_marginRight="@dimen/twenty_four"
        android:paddingBottom="@dimen/eight"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_two"
        android:layout_marginTop="@dimen/twenty_four"
        android:padding="@dimen/eight">

        <Button
            android:id="@+id/btn_dialog_single_choose_sure"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/thirty_six"
            android:minWidth="@dimen/sixty_four"
            android:layout_alignParentRight="true"
            android:text="确定"
            android:theme="@style/FlatButton"/>

        <Button
            android:id="@+id/btn_dialog_single_choose_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/thirty_six"
            android:minWidth="@dimen/sixty_four"
            android:layout_toLeftOf="@id/btn_dialog_single_choose_sure"
            android:layout_marginRight="@dimen/eight"
            android:text="取消"
            android:theme="@style/FlatButton"/>

    </RelativeLayout>

</LinearLayout>